# Synctex

set synctex true
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"

# Basic Settings

# set highlight-transparency .1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
# set window-width 960
set window-width 1280
set window-height 1080
set adjust-open "best-fit"

map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map w recolor
# map k 5k
# map j 5k
map <C-v> toggle_fullscreen

set notification-error-bg       "#000000" 
set notification-error-fg       "#ffffff" 
set notification-warning-bg     "#000000" 
set notification-warning-fg     "#ffffff" 
set notification-bg             "#000000" 
set notification-fg             "#ffffff"

set completion-bg               "#000000"
set completion-fg               "#ffffff"
set completion-group-bg         "#000000" 
set completion-group-fg         "#ffffff" 
set completion-highlight-bg     "#ffffff" 
set completion-highlight-fg     "#000000" 

# Define the color in index mode
set index-bg                    "#000000" 
set index-fg                    "#ffffff" 
set index-active-bg             "#ffffff" 
set index-active-fg             "#000000" 

set inputbar-bg                 "#000000" 
set inputbar-fg                 "#ffffff" 

set statusbar-bg                "#000000"
set statusbar-fg                "#ffffff"
set statusbar-v-padding         7

set default-bg                  "#000000"
set default-fg                  "#ffffff"
set render-loading              true
set render-loading-bg           "#000000"
set render-loading-fg           "#ffffff"

# Recolor settings (set to same as original colors)
set recolor-lightcolor          "#000000" 
set recolor-darkcolor           "#ffffff"
set recolor                     true   
